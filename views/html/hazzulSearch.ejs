function getModalSorted(a){

var myVar = <%- JSON.stringify(issuepostModels) %>;

  var modal = '';
        modal += '<div class="modal" id="bsPhotoGalleryModal" tabindex="-1" role="dialog"';
        modal += 'aria-labelledby="myModalLabel" aria-hidden="true">';
